@model IEnumerable<PracticaSeedCode.Models.Role>

@{
    ViewData["Title"] = "Index";
}

<div class="container my-4">
    <h1 class="mb-4">Lista de Roles</h1>

    <p>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-lg"></i> Crear Nuevo Rol
        </a>
    </p>

    <table class="table table-striped table-hover align-middle">
        <thead class="table-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.First().Name)</th>
                <th class="text-center">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td class="text-center">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success me-1">Editar</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-secondary me-1">Detalles</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

