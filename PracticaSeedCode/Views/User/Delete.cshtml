@model PracticaSeedCode.Models.User

@{
    ViewData["Title"] = "Eliminar Usuario";
}

<div class="container my-4">
    <h1 class="mb-4 text-danger">Eliminar Usuario</h1>
    <h5>¿Está seguro de eliminar este usuario?</h5>

    @if (!string.IsNullOrEmpty(Model.FotoPerfil))
    {
        <img src="@Url.Content("~/uploads/" + Model.FotoPerfil)" alt="Foto perfil" width="120" height="120" class="rounded-circle mb-3" />
    }
    else
    {
        <img src="@Url.Content("~/uploads/default-user.png.jpg")" alt="Sin foto" width="120" height="120" class="rounded-circle mb-3" />
    }

    <dl class="row">
        <dt class="col-sm-3 fw-semibold">Nombre</dt>
        <dd class="col-sm-9">@Model.Name</dd>

        <dt class="col-sm-3 fw-semibold">Email</dt>
        <dd class="col-sm-9">@Model.Email</dd>

        <dt class="col-sm-3 fw-semibold">Rol</dt>
        <dd class="col-sm-9">@Model.Role?.Name</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Eliminar</button>
        <a asp-action="Index" class="btn btn-secondary ms-2">Cancelar</a>
    </form>
</div>

