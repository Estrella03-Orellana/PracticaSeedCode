@model IEnumerable<PracticaSeedCode.Models.User>

@{
    ViewData["Title"] = "Lista de Usuarios";
}

<div class="container my-4">
    <h1 class="mb-4">Lista de Usuarios</h1>

    <p>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-lg"></i> Crear Nuevo Usuario
        </a>
    </p>

    <table class="table table-striped table-hover align-middle">
        <thead class="table-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.First().Name)</th>
                <th>@Html.DisplayNameFor(model => model.First().Email)</th>
                <th>Rol</th>
                <th class="text-center">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Email</td>
                    <td>@item.Role?.Name</td>
                    <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-secondary">Detalles</a> |
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Eliminar</a>
            </td>
                </tr>
            }
        </tbody>
    </table>
</div>


